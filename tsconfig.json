{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "esModuleInterop": true,
    "typeRoots" : ["./app/javascript/types", "./node_modules/@types"],

    "paths": {
      "~reducers/*": [
        "app/javascript/packs/reducers/*"
      ],
      "~actions/*": [
        "app/javascript/packs/actions/*"
      ],
      "~containers/*": [
        "app/javascript/packs/containers/*"
      ],
      "packs/*": [
        "app/javascript/packs/*"
      ]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
